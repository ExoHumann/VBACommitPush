#!/usr/bin/env python3
"""
Spotviso test runner - simple wrapper around pytest for this project.
"""
import sys
import subprocess

def main():
    if len(sys.argv) < 2 or sys.argv[1] != "test":
        print("Usage: spotviso test [-m marker]")
        sys.exit(1)
    
    # Convert spotviso test arguments to pytest arguments
    pytest_args = ["python", "-m", "pytest"]
    
    # Add remaining arguments
    if len(sys.argv) > 2:
        pytest_args.extend(sys.argv[2:])
    
    # Run pytest
    result = subprocess.run(pytest_args, cwd="/home/runner/work/VBACommitPush/VBACommitPush")
    sys.exit(result.returncode)

if __name__ == "__main__":
    main()